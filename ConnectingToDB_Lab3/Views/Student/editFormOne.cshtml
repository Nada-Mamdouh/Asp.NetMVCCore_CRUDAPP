@model Student
@{
    //Layout = "_Layout2";
    ViewBag.Title="Student Edit Form1";

}


    <div class="container">
        <div class="row g-0" style="min-height: 75vh;">
            <form  method="post" asp-action="editFormTwo" asp-controller="student" class="m-auto mt-4" enctype="multipart/form-data" style="min-width: 50rem; margin: 20 auto;max-width: 400px; padding: 10px; border-radius: 10px; border:1px solid rgba(0,0,0,0.2); " >
                <input asp-for="Id" Placeholder="@Model.Id" value="@Model.Id" type="hidden"/>
                
               

                <label asp-for="Name"></label>
                <input asp-for="Name" placeholder="@Model.Name"/>
                <span asp-validation-for="Name" ></span>
                <br/><br/> 
                
                <label asp-for="Age"></label>
                <input asp-for="Age" placeholder="@Model.Age"/>
                <span asp-validation-for="Age" ></span>
                <br/><br/>   

                <label asp-for="DeptId"></label>
                    <select asp-for="DeptId" asp-items="ViewBag.depts">
                    </select>
                <br/><br/>
                
                
                

                
                
                <input type="submit" value="Next>>" class="btn btn-success mt-2 mb-2" style="margin: 20px 0px ;"/>
            </form>
            @section scripts{
                <partial name="_ValidationScriptsPartial"/>
            }

